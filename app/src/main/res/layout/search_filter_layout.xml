<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <CheckBox
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="تخفیف های امروز"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <CheckBox
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="تخفیف های امروز"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/indicator_border_color"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="1dp"/>
    <GridLayout
        android:id="@+id/main_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/amusment_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/amusment_textView"
                android:drawableTop="@drawable/ic_swimming_pool_solid"
                android:text="@string/amusement"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="@color/coop_item_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/services_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/services_textView"
                android:drawableTop="@drawable/ic_wrench_solid"
                android:text="@string/services"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/restaurant_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/restaurant_textView"
                android:drawableTop="@drawable/ic_utensils"
                android:text="@string/restaurant"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:drawablePadding="8dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/tours_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/tours_textView"
                android:drawableTop="@drawable/ic_plane_departure"
                android:drawablePadding="4dp"
                android:text="@string/tours"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/health_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">

            <TextView
                android:id="@+id/health_textView"
                android:drawableTop="@drawable/ic_heartbeat"
                android:text="@string/health"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/arts_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/arts_textView"
                android:drawableTop="@drawable/ic_palette"
                android:text="@string/arts"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/education_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/education_textView"
                android:drawableTop="@drawable/ic_graduation_cap"
                android:text="@string/educational"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/makeUps_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/makeUps_textView"
                android:drawableTop="@drawable/ic_grin_beam_category"
                android:text="@string/makeups"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tags_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grid_items_border">
            <TextView
                android:id="@+id/tags_textView"
                android:drawableTop="@drawable/ic_tags"
                android:text="@string/today_tags"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:drawablePadding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:textColor="@color/grin_beam_color"
            android:background="@drawable/coop_confirm_and_cancel_btn"
            style="?attr/borderlessButtonStyle"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/cancel"
            android:textSize="22sp"
            android:id="@+id/cancel_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/sendbtnstyle"
            android:textColor="@color/white"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:textSize="22sp"
            android:text="@string/apply_filter"
            android:id="@+id/apply_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"/>
    </LinearLayout>


</LinearLayout>