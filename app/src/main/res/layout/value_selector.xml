<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/velue_selector_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonMinus"
        android:layout_marginEnd="@dimen/valueselector_margin_left_right"

        android:layout_width="@dimen/valueselector_button_wh"
        android:layout_height="@dimen/valueselector_button_wh"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_minus"/>

    <customviews.RialTextView
        android:id="@+id/textValue"
        android:layout_width="wrap_content"
        android:text="1"
        android:textColor="@color/grin_beam_color"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonPlus"
        android:layout_width="@dimen/valueselector_button_wh"
        android:layout_height="@dimen/valueselector_button_wh"
        android:layout_marginStart="@dimen/valueselector_margin_left_right"

        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_plus"/>



</LinearLayout>